<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp">
    <ImageView
        android:id="@+id/iv_news_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagetwo" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_news_author_photo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_news_photo"
        android:scaleType="centerCrop"
        android:src="@drawable/authortwo" />

    <TextView
        android:id="@+id/tv_news_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/civ_news_author_photo"
        tools:text="Fajri Fernanda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_toRightOf="@id/iv_news_photo"
        android:layout_below="@id/civ_news_author_photo"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="5dp"
        android:text="This is News Title"/>
    <ImageView
        android:id="@+id/iv_news_like_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_news_photo"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_heart"
        android:tint="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/tv_news_likes"
        android:layout_toRightOf="@id/iv_news_like_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marline and 5 others"/>
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_comment_24dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_toLeftOf="@id/tv_news_totalcomment"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/tv_news_totalcomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="textEnd"
        android:textSize="10sp"
        android:gravity="end"
        android:text="10"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:layout_marginTop="10dp"/>
</LinearLayout>